<mvc:View
    controllerName="filetedn.controller.File-Tedn"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:upload="sap.m.upload"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <upload:UploadSet
            id="UploadSet"
            instantUpload="true"
            showIcons="true"
            uploadEnabled="true"
            terminationEnabled="true"
            maxFileNameLength="30"
            uploadCompleted="onUploadTerminated"
            beforeUploadStarts="onBeforeUploadStarts"
            maxFileSize="200"
            uploadUrl="/sap/opu/odata/SAP/ZTEDN_FILE_SRV/FileSet"
            items="{ path: '/FileSet', templateShareable:true }"
            mode="SingleSelectMaster"
            multiple="true"
            selectionChanged="onSelectionChange"
            afterItemAdded="onChange"
            afterItemRemoved="onFileDelete"
        >
            <upload:items>
                <upload:UploadSetItem id="AB1" fileName="{Filename}" mediaType="{Mimetype}" url="{Url}" visibleEdit="false" />
            </upload:items>
        </upload:UploadSet>
    </Page>
</mvc:View>
